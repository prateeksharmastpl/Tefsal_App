<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    tools:context="com.tefal.activity.TC_Actitivity">

    <include layout="@layout/toolbar_about"
        android:id="@+id/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_imageContainer"
        android:gravity="center"

        android:layout_below="@+id/toolbar">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/logo_blue"

            android:id="@+id/image_view"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:id="@+id/LL_content"
    android:layout_below="@+id/LL_imageContainer"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="@dimen/text_mid"
        android:id="@+id/tc_text"/>

</LinearLayout>

</RelativeLayout>
