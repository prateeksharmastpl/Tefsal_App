<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bdbdbd" />

        <TextView
            android:id="@+id/text_Tailor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TAILOR"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_mid"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#bdbdbd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:weightSum="2.5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/LL_imageContainer"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/cart_item_delete"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/cart_item_delete_icon"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:id="@+id/product_img"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_launcher"
                android:scaleType="centerCrop" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_textile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold" />
            <me.grantland.widget.AutofitTextView
                android:id="@+id/sub_text_textile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEF rfbrbg egeg egeg egeg egeg egeg egegeg egeg  "
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                autofit:minTextSize="@dimen/text_small"
                android:textSize="@dimen/text_normal"
                />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="wfbwf wfwf "
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                autofit:minTextSize="@dimen/text_small"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wfbwf wfwf "
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                autofit:minTextSize="@dimen/text_small"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>
