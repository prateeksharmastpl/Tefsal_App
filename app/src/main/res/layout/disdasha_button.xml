<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_gray_shape">


    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/two_point_disdasha_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="2 Button Style"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="VIEW"
            android:textStyle="bold"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/text_mid" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerbar"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buttons"
                android:layout_marginTop="@dimen/margin_mid2"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/text_normal" />


            <ImageView
                android:id="@+id/coatCollarBtn"
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:layout_toLeftOf="@+id/coat_button"
                android:layout_marginRight="@dimen/margin_mid"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/icon_collar_buttons_white" />

            <TextView
                android:layout_width="@dimen/margin_mid"
                android:layout_height="@dimen/margin_mid"
                android:text="1"
                android:textSize="@dimen/text_small"
                android:gravity="center"
                android:layout_marginLeft="-35dp"
                android:layout_toRightOf="@+id/coatCollarBtn"
                android:textColor="@color/colorWhite"
                android:background="@drawable/badge_grey"/>

            <ImageView
                android:id="@+id/coat_button"
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/icon_chest_buttons_white" />


            <TextView
                android:layout_width="@dimen/margin_mid"
                android:layout_height="@dimen/margin_mid"
                android:text="2"
                android:textSize="@dimen/text_small"
                android:gravity="center"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/coat_button"
                android:textColor="@color/colorWhite"
                android:background="@drawable/badge_grey"/>

            <ImageView
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_mid"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/coat_button"
                android:src="@mipmap/icon_cufflink_buttons_white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Pockets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pockets"
                android:layout_centerVertical="true"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/text_normal" />


            <ImageView
                android:id="@+id/mobile_pen"
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:layout_toLeftOf="@+id/mobile_pocket"
                android:layout_marginRight="@dimen/margin_mid"
                android:src="@mipmap/icon_pen_white" />

            <ImageView
                android:id="@+id/mobile_pocket"
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_mobile_white" />


        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:text="Narrow"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:text="22cm"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorDGray" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:text="Wide"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:text="22cm"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/winter"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/round_shape_light_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Winter Style"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="VIEW"
            android:textStyle="bold"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/text_small" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/round_blue_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Create New"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_mid" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:background="@drawable/id_add_white"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_mid" />

    </RelativeLayout>
</LinearLayout>